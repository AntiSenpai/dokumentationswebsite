        }
</script>
<script>
  document.getElementById('add-customer-btn').addEventListener('click', function() {
    openAddCustomerModal();
  });

  function openAddCustomerModal() {
    // Code zum Anzeigen eines Modal-Dialogs
    alert('Hier k√∂nnte ein Formular zum Hinzuf√ºgen von Kunden stehen.');
  }
</script>
</html>
{% endblock %}
