{% extends 'base.html.twig' %}

{% block title %}Druckansicht{% endblock %}

{% block body %}
<head>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            font-size: 10pt;
        }
        .container {
            width: 100%;
            margin: 0 auto;
        }
        .header, .footer {
            text-align: center;
            margin-top: 20px;
        }
        .content {
            padding: 20px 0;
        }
        .section {
            margin-bottom: 30px;
        }
        .section h2 {
            font-size: 12pt;
            border-bottom: 1px solid #ddd;
            padding-bottom: 5px;
            margin-bottom: 10px;
        }
        .card {
            margin-bottom: 10px;
        }
        .card-header {
            font-weight: bold;
            border-bottom: 1px solid #ddd;
            padding-bottom: 5px;
        }
        .card-body {
            padding-top: 5px;
        }
        ul {
            padding-left: 20px;
        }
        li {
            margin-bottom: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <!-- Logo will be added manually -->
            <h1>Schnelldokumentation</h1>
        </div>
        <div class="content">
            <!-- Dynamically generated content sections for each documentation type -->
            {% for type, docs in documentationData %}
            <div class="section">
                <h2>{{ type|capitalize }}</h2>
                {% for doc in docs %}
                <div class="card">
                    <div class="card-header">{{ doc.title }}</div>
                    <div class="card-body">
                        {{ doc.content|raw }}
                    </div>
                </div>
                {% endfor %}
            </div>
            {% endfor %}
        </div>
        <div class="footer">
            Erstellt am {{ "now"|date("d.m.Y") }}
        </div>
    </div>
</body>
{% endblock %}
